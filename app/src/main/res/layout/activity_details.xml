<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/processing"
            android:indeterminateTint="@color/purple_500"
            android:visibility="visible"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

                <RelativeLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                        <RelativeLayout
                            android:id="@+id/stock_details"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                                <ImageView
                                    android:id="@+id/logo"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"></ImageView>

                                <RelativeLayout
                                    android:layout_width="350dp"
                                    android:layout_height="70dp"
                                    android:layout_marginLeft="60dp">

                                        <LinearLayout
                                            android:id="@+id/ll1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/stockName"
                                                    android:layout_width="170dp"
                                                    android:layout_height="40dp"
                                                    android:layout_gravity="left"
                                                    android:paddingLeft="10sp"
                                                    android:paddingTop="10dp"
                                                    android:textSize="20sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/stockPrice"
                                                    android:layout_width="130dp"
                                                    android:layout_height="40dp"
                                                    android:layout_alignRight="@id/stockName"
                                                    android:paddingLeft="10sp"
                                                    android:paddingTop="10dp"
                                                    android:textAlignment="textEnd"
                                                    android:textSize="20sp"
                                                    android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/ll1"
                                            android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/stockTicker"
                                                    android:layout_width="170dp"
                                                    android:layout_height="20dp"
                                                    android:layout_gravity="left"
                                                    android:paddingLeft="10sp"
                                                    android:textColor="#A5A0A0"
                                                    android:textSize="15sp" />

                                                <ImageView
                                                    android:id="@+id/pricetrend"
                                                    android:layout_width="20dp"
                                                    android:layout_height="25dp"
                                                    />

                                                <TextView
                                                    android:id="@+id/stockChange"
                                                    android:layout_width="110dp"
                                                    android:layout_height="20dp"
                                                    android:layout_alignRight="@id/pricetrend"
                                                    android:textAlignment="textEnd"
                                                    android:paddingLeft="10sp"
                                                    android:textColor="#A5A0A0"
                                                    android:textSize="15sp" />


                                        </LinearLayout>
                                </RelativeLayout>


                        </RelativeLayout>
                        <androidx.viewpager.widget.ViewPager
                            android:layout_width="match_parent"
                            android:layout_height="430dp"
                            android:id="@+id/chartFrag"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/stock_details"></androidx.viewpager.widget.ViewPager>

                        <com.google.android.material.tabs.TabLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/swipe"
                            app:tabIconTint="@color/black"
                            app:tabSelectedTextColor="@color/blue"
                            app:tabIndicatorColor="@color/blue"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/chartFrag">

                        </com.google.android.material.tabs.TabLayout>

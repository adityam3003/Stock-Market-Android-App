                        <RelativeLayout
                            android:id="@+id/portfolio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/swipe"
                            android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/portfoliohead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:paddingLeft="20dp"
                                    android:text="Portfolio"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/portfoliohead"
                                    android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/line1portfolio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/portfoliohead"
                                            android:layout_marginLeft="20dp"
                                            android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="120dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginLeft="20dp"
                                                    android:text="Shares Owned: "
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:layout_width="120dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginLeft="20dp"
                                                    android:text="Avg. Cost/Share: "
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:layout_width="120dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginLeft="20dp"
                                                    android:text="Total Cost: "
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:layout_width="120dp"
                                                    android:layout_marginLeft="20dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:text="Change: "
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:layout_width="120dp"
                                                    android:layout_marginLeft="20dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:text="Market Value: "
                                                    android:textColor="#000000" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/line2portfolio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/portfoliohead"
                                            android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/pfQ"
                                                    android:layout_width="120dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:text="0"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/avgP"
                                                    android:layout_width="120dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:text="$0.00"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/totalP"
                                                    android:layout_width="120dp"
                                                    android:text="$0.00"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/changeP"
                                                    android:layout_width="120dp"
                                                    android:text="$0.00"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/marketP"
                                                    android:layout_width="120dp"
                                                    android:text="$0.00"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:textColor="#000000" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/portfoliohead"
                                            android:orientation="vertical">

                                                <Button
                                                    android:layout_width="80dp"
                                                    android:layout_height="35dp"
                                                    android:layout_marginTop="55dp"
                                                    android:backgroundTint="#4CAF50"
                                                    android:text="TRADE"
                                                    android:background="@drawable/rounded_b"
                                                    android:id="@+id/trade"
                                                    android:textColor="@color/white"
                                                    android:textSize="10dp">

                                                </Button>

                                        </LinearLayout>
                                </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/portfolio"
                            android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/statshead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:paddingLeft="20dp"
                                    android:text="Stats"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/line1stat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/statshead"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/op"
                                            android:layout_width="185dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:textColor="#000000" />

                                        <TextView
                                            android:id="@+id/hp"
                                            android:layout_width="185dp"
                                            android:layout_height="wrap_content"
                                            android:textColor="#000000" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/line2stat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/line1stat"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/lp"
                                            android:layout_width="185dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:textColor="#000000" />

                                        <TextView
                                            android:id="@+id/pc"
                                            android:layout_width="185dp"
                                            android:layout_height="wrap_content"
                                            android:textColor="#000000" />
                                </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/stats"
                            android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/abouthead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:paddingLeft="20dp"
                                    android:text="About"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/line1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/abouthead"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/ipo"
                                            android:layout_width="140dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="IPO Start Date"
                                            android:textColor="#000000" />

                                        <TextView
                                            android:id="@+id/ipoval"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="#000000" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/line2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/line1"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/industry"
                                            android:layout_width="140dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="Industry"
                                            android:textColor="#000000" />

                                        <TextView
                                            android:id="@+id/industryval"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="#000000" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/line3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/line2"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/webpage"
                                            android:layout_width="140dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="Webpage"
                                            android:textColor="#000000" />

                                        <TextView
                                            android:id="@+id/webpageval"
                                            android:textColor="@color/blue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:onClick="onClick"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/line4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/line3"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/peers"
                                            android:layout_width="140dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="Peers"
                                            android:textColor="#000000" />

                                        <HorizontalScrollView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/peersval">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/peerval"
                                                    android:orientation="horizontal"></LinearLayout>
                                        </HorizontalScrollView>
                                </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/insights"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about"
                            android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/insightshead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:paddingLeft="20dp"
                                    android:text="Insights"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/ss"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/insightshead"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="20dp"
                                    android:text="Social Sentiment"
                                    android:textColor="#000000"
                                    android:textSize="20sp" />

                                <TableLayout
                                    android:id="@+id/sstable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ss"
                                    android:layout_marginTop="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="#FFFFFF">

                                        <TableRow>

                                                <TextView
                                                    android:id="@+id/ssstock"
                                                    android:layout_margin="2dp"
                                                    android:background="#8FBEC1BC"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="60dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_margin="2dp"
                                                    android:background="#8FBEC1BC"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:text="Reddit"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:layout_margin="2dp"
                                                    android:background="#8FBEC1BC"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:text="Twitter"
                                                    android:textColor="#000000" />
                                        </TableRow>

                                        <TableRow>

                                                <TextView
                                                    android:layout_margin="2dp"
                                                    android:background="#8FBEC1BC"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="60dp"
                                                    android:paddingBottom="5dp"
                                                    android:text="Total Mentions"
                                                    android:textColor="#000000"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/redmen"
                                                    android:layout_margin="2dp"
                                                    android:background="#EDEBEB"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/twitmen"
                                                    android:layout_margin="2dp"
                                                    android:background="#EDEBEB"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000" />
                                        </TableRow>

                                        <TableRow>

                                                <TextView
                                                    android:layout_margin="2dp"
                                                    android:background="#8FBEC1BC"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:text="Positive Mentions"
                                                    android:textColor="#000000"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/redpm"
                                                    android:layout_margin="2dp"
                                                    android:background="#EDEBEB"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/twitpm"
                                                    android:layout_margin="2dp"
                                                    android:background="#EDEBEB"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000" />
                                        </TableRow>

                                        <TableRow>

                                                <TextView
                                                    android:layout_margin="2dp"
                                                    android:background="#8FBEC1BC"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingBottom="5dp"
                                                    android:text="Negative Mentions"
                                                    android:textColor="#000000"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/rednm"
                                                    android:layout_margin="2dp"
                                                    android:background="#EDEBEB"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/twitnm"
                                                    android:layout_margin="2dp"
                                                    android:background="#EDEBEB"
                                                    android:paddingLeft="5dp"
                                                    android:paddingTop="5dp"
                                                    android:paddingRight="50dp"
                                                    android:paddingBottom="5dp"
                                                    android:textColor="#000000" />
                                        </TableRow>

                                </TableLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/charts3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/insights"
                            android:layout_marginTop="20dp">

                                <WebView
                                    android:id="@+id/chart3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"></WebView>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/charts4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/charts3"
                            android:layout_marginTop="20dp">

                                <WebView
                                    android:id="@+id/chart4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"></WebView>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/news"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/charts4"
                            android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/newshead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:paddingLeft="20dp"
                                    android:text="News"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/newsRec"
                                    android:layout_below="@+id/newshead">

                                </androidx.recyclerview.widget.RecyclerView>

                        </RelativeLayout>

                </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/fav_recycle">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll1">
        <TextView
            android:id="@+id/stockName"
            android:layout_width="220dp"
            android:layout_height="29dp"
            android:layout_gravity="left"
            android:paddingLeft="10sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/stockP"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:textAlignment="textEnd"
            android:paddingLeft="10sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignRight="@id/stockName"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll1"
        android:id="@+id/ll2">
        <TextView
            android:id="@+id/stockTicker"
            android:layout_width="210dp"
            android:layout_height="29dp"
            android:layout_gravity="left"
            android:paddingLeft="10sp"
            android:textColor="#A5A0A0"
            android:textSize="15sp"
            android:paddingTop="7sp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:id="@+id/pricetrend"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/stockC"
            android:layout_width="140dp"
            android:layout_height="29dp"
            android:layout_alignRight="@id/pricetrend"
            android:textAlignment="textEnd"
            android:paddingLeft="10sp"
            android:paddingTop="7sp"
            android:textColor="#A5A0A0"
            android:textSize="15sp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/stockC"
            android:id="@+id/btnNext"
            android:backgroundTint="@color/white"
            android:src="@drawable/chevron_right"/>

    </LinearLayout>
    <View
        android:layout_below="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A5A0A0"/>
</RelativeLayout>